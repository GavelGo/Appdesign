<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumer Information"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorAccent"/>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/applogo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/profileicon"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Add profile photo"/>

        <Button
            android:id="@+id/browseBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textAllCaps="false"
            android:text="Browse"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="2">


        <EditText
            android:id="@+id/firstnameET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_12sdp"
            android:singleLine="true"
            android:hint="First name"
            android:background="@drawable/edittext_background"
            android:paddingLeft="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/lastnameET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_12sdp"
            android:hint="Last name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:background="@drawable/edittext_background"
            android:paddingLeft="@dimen/_10sdp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/phoneET"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:inputType="phone"
        android:background="@drawable/edittext_background"
        android:singleLine="true"
        android:paddingLeft="@dimen/_10sdp"
        android:hint="Phone # (000)-000-000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:orientation="horizontal"
        android:weightSum="2">


        <EditText
            android:id="@+id/streetET"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/edittext_background"
            android:layout_weight="1.3"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp"
            android:hint="Address(# Street)"/>

        <EditText
            android:id="@+id/aptET"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/edittext_background"
            android:layout_weight="0.7"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp"
            android:hint="Apt/Suite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.5"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp">

        <EditText
            android:id="@+id/cityET"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="0.5"
            android:background="@drawable/edittext_background"
            android:hint="City"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/stateET"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="0.5"
            android:hint="State"
            android:layout_marginLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:background="@drawable/edittext_background"/>

        <EditText
            android:id="@+id/zipET"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/_10sdp"
            android:hint="Zipcode"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:background="@drawable/edittext_background"/>

    </LinearLayout>

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Description"
        android:singleLine="true"
        android:textSize="@dimen/_12sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:background="@drawable/edittext_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:weightSum="2">

        <Button
            android:id="@+id/saveBT"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:text="Save Account"
            android:textAllCaps="false"
            android:background="@drawable/buttonbackground"
            android:textColor="@color/colorWhite"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/cancelBT"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textAllCaps="false"
            android:background="@drawable/buttonbackground"
            android:textColor="@color/colorWhite"
            android:stateListAnimator="@null"/>

    </LinearLayout>
</LinearLayout>