<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/_3sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp">



                <TextView
                    android:id="@+id/posTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="01"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_below="@+id/posTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Normal Oil Change"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack" />


                <TextView
                  android:id="@+id/desTV"
                    android:layout_below="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Highlights"
                    android:textSize="@dimen/_12sdp" />



                <LinearLayout
                    android:layout_below="@+id/imageIV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="#efefef"
                        android:layout_height="@dimen/_30sdp">



                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/editicon"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/deleteRL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="#efefef">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/deleteicon"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="#efefef">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/password_visible"/>



                </RelativeLayout>



                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/deletelayoutRL"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@+id/imageIV">

                    <TextView
                        android:id="@+id/deleteTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/_12sdp"
                        android:text="Are you sure you want to delete this product ?"/>


                    <Button
                        android:id="@+id/deleteyesBT"
                        android:layout_toLeftOf="@+id/deletenoBT"
                        android:layout_below="@+id/deleteTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:stateListAnimator="@null"/>



                    <Button
                        android:id="@+id/deletenoBT"
                        android:layout_below="@+id/deleteTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:textAllCaps="false"
                        android:stateListAnimator="@null"/>



                </RelativeLayout>





                <ImageView
                    android:id="@+id/imageIV"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/localfresh"
                    android:scaleType="center"/>


            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
