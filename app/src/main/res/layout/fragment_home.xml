<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/headerLL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/edittext_background"
            android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3">

                        <ImageView
                            android:id="@+id/searchIV"
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@android:drawable/ic_search_category_default"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@+id/searchIV"
    android:hint="Search"
    android:imeOptions="actionSearch"
    android:textSize="@dimen/_12sdp"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:singleLine="true"
    android:background="@null"/>
                       <!-- <SearchView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:queryHint="Search"></SearchView>-->

                </RelativeLayout>

                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                        <EditText
                            android:layout_toLeftOf="@+id/locationIV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:editable="false"
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:hint="Nearby"/>

                        <ImageView
                            android:id="@+id/locationIV"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/location"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>
        </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabsTL"
        app:layout_constraintTop_toBottomOf="@+id/headerLL"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        app:tabTextAppearance="@style/MineCustomTabText"
        android:layout_height="@dimen/_35sdp"
        app:tabMode="scrollable"
        app:tabGravity="center"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        app:layout_constraintTop_toBottomOf="@+id/tabsTL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.constraintlayout.widget.ConstraintLayout>